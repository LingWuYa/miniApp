/* pages/shop/shop.wxss */
swiper {
  height: 400rpx;
}
swiper image{
  width: 100%;
  /* height: 400rpx; */
}
.section-title {
  width: 100%;
  padding: 20px 0;
  
}

.section-title .title{
  color:#000;
  font-size: 13px;
  display: block; 
  width: 100%;
  text-align: center;
  font-weight:700;
  position: relative;
}

.section-title .all {
 position:absolute;
 right: 10px;
  top: 0; 
  color:#d81e06;
}

.shop-category {
  width:100%;
  display: flex;
  flex-direction: column;
}

.row1, .row2 {
  width:100%;
  padding: 0 20px;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.row1 .category-item {
  width:100%;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.row1 .category-item:last-child{
  border-right: 0;
}

.row2 .category-item {
  width:100%;
  border-right: 1px solid #eee;
}

.row2 .category-item:last-child{
  border-right: 0;
}

.category-item text {
  display: block;
  text-align: center;
  margin: 10px 0;
}

.category-item image {
  width: 90%;
  height: 150rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 10px;
  /* padding: 0 10px 10px 10px; */
  box-sizing: border-box;
}